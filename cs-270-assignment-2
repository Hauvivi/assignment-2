#Section 1 - Basics

#ask the user for their name
print "enter your name: "

#store user's input and store it in a variable
name = gets.chomp

puts "Nice to meet you, #{name}."

#Section 2 - Selection

#ask the user for a number

print "enter a number: "

number = gets.chomp.to_i

    if number % 2 == 0 
        puts "#{number} is even."
    else 
        puts "#{number} is odd."
end

#Section 3 - Repetition

#ask the user for a number

# initialize some condition
input = ''

# while condition is true
while input != 'q'

print "enter a number: "
number = gets.chomp.to_i

    if number % 2 == 0
	    puts "#{number} is even"
    else
	    puts "#{number} is odd"
end

# update condition
print "enter press q to quit, or any other key to continue."
input = gets.chomp

end

#Section 5 - Arrays

#ask the user for their name
print "enter your name: "

#wait for user to type input
#and store it in a variable
name = gets.chomp

#ask the user for their age
print "enter your age: "

#wait for user to type input
#and store it in a variable
age = gets.chomp.to_i


puts "Hello #{name}. I see that you are #{age} years old."
